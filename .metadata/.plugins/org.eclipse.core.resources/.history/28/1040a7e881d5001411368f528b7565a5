package com.aeke.Project;

import android.widget.Toast;

public class Currency {
	String TextRe;
	
	public String GetCurr(TextRe){
		if(TextRe.equals("บาทเป็นดอลล่า")){
			TextRe = "THB,USD".toString().trim();
		}
		else if (TextRe.equals("ดอลล่าเป็นบาท")){
			TextRe = "USD,THB".toString().trim();
		}
		return TextRe;
	}
}
