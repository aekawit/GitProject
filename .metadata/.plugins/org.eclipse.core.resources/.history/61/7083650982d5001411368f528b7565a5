package com.aeke.Project;

import android.widget.Toast;

public class Currency {
	String TextRe = "";
	
	public String GetCurr(String TextRe2){
		if(TextRe2.equals("บาทเป็นดอลล่า")){
			TextRe = "THB,USD".toString().trim();
		}
		else if (TextRe2.equals("ดอลล่าเป็นบาท")){
			TextRe = "USD,THB".toString().trim();
		}
		return TextRe;
	}
}
